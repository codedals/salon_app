<h2 class="sub-header">Product Management (<%= @salon.name %>)</h2>
<div class="table-responsive">
<p id="notice"><%= notice %></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.type %></td>
        <td><%= link_to 'Show', salon_product_path(@salon, product) %></td>
        <td><%= link_to 'Edit', edit_salon_product_path(@salon,product) %></td>
        <td><%= link_to 'Destroy', salon_product_path(@salon,product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Product', new_salon_product_path(@salon) %>
<br />
<%= link_to "Back to Salon", salon_path(@salon) %>
</div>
