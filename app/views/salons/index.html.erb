<h2 class="sub-header">Salon Management</h2>
<div class="table-responsive">
<p id="notice"><%= notice %></p>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Main image</th>
      <th>Description</th>
      <th>Menu Items</th>
      <th>Portfolio Images</th>
      <th>Active</th>
      <th>Listed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @salons.each do |salon| %>
      <tr>
        <td><%= salon.name %></td>
          <td><%= image_tag salon.display_image, class: "img-thumbnail", size:"500" %></td>
        <td><%= salon.description %></td>

        <td><%= link_to "Count: #{salon.products.count}", salon_products_path(salon) %></td>
        <td><%= link_to "Count: #{salon.salon_images.count}", salon_salon_images_path(salon) %></td>

        <td><%= salon.active %></td>
        <td><%= salon.listed %></td>
        <td><%= link_to 'Show', salon %></td>
        <td><%= link_to 'Edit', edit_salon_path(salon) %></td>
        <td><%= link_to 'Destroy', salon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Salon', new_salon_path %>
</div>
